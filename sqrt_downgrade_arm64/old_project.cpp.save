int old_project::lgth(double nmb){
     s+=to_string(nmb);
     int xi=0;
     for(int i=0;i<=s.size()-1;i++){
        if(s.at(i)!=*"."){xi+=1;}
        if(s.at(i)==*"."){break;}
     }
     cout<<"legnth of function is " << xi <<"\n";
     return xi;
}

